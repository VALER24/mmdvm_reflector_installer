[Unit]
Description=MMDVM Reflector Daemon
After=network.target

[Service]
User=root
WorkingDirectory=/
ExecStart=/MMDVM_Reflector/MMDVM_Reflector/bin/Debug/net8.0/MMDVM_Reflector --config=/MMDVM_Reflector/MMDVM_Reflector/configs/config.yml
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
